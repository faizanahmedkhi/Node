<div class="row" style="margin-top: 20px;">

<div class="col-md-6">
    <img src="../assets/img/signup.jpg"  width="100%" height="500px"/>
</div>

<div class="col-md-6">
     <% if(locals.errors) { %>
            
            <% errors.forEach(error => { %>
            <div class="alert alert-danger" role="alert"><%= error.msg %> </div>
            <% }) %>
           
      <% } %>
      
    <form action="/register" method="POST">
        <h1>Create New Account</h1>
        <div class="form-group">
            <label for="exampleInputPassword1">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name" value=<% if(locals.inputs){ %> <%= inputs.name%> <% } %> >
          </div>

        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input type="email" class="form-control" name="email"  placeholder="Enter email" value=<% if(locals.inputs){ %> <%= inputs.email%> <% } %> >
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input type="password" class="form-control" name="password" placeholder="Password"> 
        </div>
       
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>

</div>