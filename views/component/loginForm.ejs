<div class="row" style="margin-top: 20px;">

    <div class="col-md-6">
        <img src="../assets/img/signup.jpg"  width="100%" height="500px"/>
    </div>
    
    <div class="col-md-6">
          <% if(locals.message.success){ %>
          <div class="alert alert-success" role="alert"><%= message.success %> </div>
          <% } %>

          <% if(locals.errors) { %>
             
             <% errors.forEach(error => { %>
              <div class="alert alert-danger" role="alert"><%= error.msg %> </div>
             <% }) %>

           <% } %>
        <form action="/postLogin" method="POST">
            <h1>User Login</h1>            
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control"  placeholder="Enter email" name="email" value=<% if(locals.inputs){ %> <%= inputs.email%> <% } %> >
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" placeholder="Password" name ="password" value=<% if(locals.inputs){ %> <%= inputs.password%> <% } %> >
            </div>
           
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
    
    </div>