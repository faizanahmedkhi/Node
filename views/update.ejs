<%- include("component/header.ejs"); %>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <% if(locals.errors) { %>
             
            <% errors.forEach(error => { %>
             <div class="alert alert-danger" role="alert"><%= error.msg %> </div>
            <% }) %>

          <% } %>

        <form action="/update" method="POST">
            <h1>Update Post</h1>            
            <div class="form-group">
              <label for="exampleInputEmail1">Title</label>
              <input type="text" class="form-control"  placeholder="Title" name="title" value="<%= update.title  %>" >              
            </div>
            <input type="hidden" name="hiddenID" value="<%= update._id %>">
            <div class="form-group">
              <label for="exampleInputPassword1">Body</label>
              <textarea class="form-control" id="exampleFormControlTextarea1" name="body" rows="3"><%= update.body %></textarea>
            </div>    
           
            <button type="submit" class="btn btn-primary">Update</button>
          </form>

    </div>                    
    <div class="col-md-3"></div>
</div>

<%- include("component/footer.ejs"); %>